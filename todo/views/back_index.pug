doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - Node.js Express Application
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/@mdi/font@4.x/css/materialdesignicons.min.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/@mdi/font@4.x/css/materialdesignicons.min.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.min.css')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui')
    script(src='https://cdn.jsdelivr.net/npm/vue@2.x/dist/vue.js', defer)
    script(src='https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.js', defer)
    script(src='/js/main.js', defer)
    
  body

    #app 
      v-app

        v-navigation-drawer(app)
        v-app-bar(app)
          v-app-bar-nav-icon
          v-icon(color='green') mdi-vuejs 
          v-icon(color='primary') mdi-vuetify
          v-toolbar-title ToDo


        v-main

          v-container
            v-btn(elevation='6', color='teal lighten-2', rounded, dark) Roubded-Button Test!
            v-btn.mx-2(fab, color='teal lighten-2', dark)
              v-icon mdi-plus

          v-container 
            v-card.mx-auto
              v-list(dense)
                v-subheader List Test 
                v-list-item-group(v-model='selectedItem', color='teal lighten-2')
                  v-list-item(v-for='(item, i) in items' ,:key='i')
                    v-list-item-icon
                      v-icon(v-text='item.icon')
                    v-list-item-content
                      v-list-item-title(v-text='item.text')
        

        v-footer(app) Footer